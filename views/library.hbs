<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	  <title>BruinPlay</title>

	  <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/js/script.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="css/styles.css">

    <link rel="icon" href="images/icon.png" type="image/x-icon" />

</head>
<body>

    <div id="overlay">
        <div id="box">
            <h2>Add a Song</h2>
            <form id="addsong" method="POST" enctype="multipart/form-data" action="/songs/add">
                <input class="textinput" type="text" id="addsong_title" name="title" placeholder="Title..." />
                <input class="textinput" type="text" id="addsong_artist" name="artist" placeholder="Artist..." />
                <input class="textinput" type="text" id="addsong_album" name="album" placeholder="Album..." />
                <input class="textinput" type="text" id="addsong_length" name="length" placeholder="Song Length..." />
                <input class="textinput" type="text" id="addsong_genre" name="genre" placeholder="Genre..." />
                <label for="addsong_art">Album Art</label> 
                <input type="file" id="addsong_art" name="art">
                <label for="addsong_mp3">Mp3</label>
                <input type="file" id="addsong_mp3" name="mp3">

                <input type="submit" value="Add Song" />
                    <input type="button" value="Clear" onClick="clearForm()" />
                <input type="button" value="Close" onClick="setOverlayDisplay(false)" />
            </form>
           <!--  <form method="post" enctype="multipart/form-data" action="/upload">
                <input type="file" name="file">
                <input type="submit" value="Submit">
            </form> -->
        </div>
    </div>

    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/library">BruinPlay</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" onClick="setOverlayDisplay(true)">Add Song</a>
                </li>
            </ul>
            <!-- <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form> -->
        </div>
    </nav>

    <div class="container">
        <div class="row music-row">
            <!-- xs (phones), sm (tablets), md (desktops), and lg (larger desktops) -->
            
            <!-- <div class="col-md-3 col-sm-4"> 
                <div class="itemsContainer">
                    <div class="play">
                        <img src="/images/play.png">
                    </div>
                    <div class="music opacity-effect"> 
                        <img src="/images/add.png"></a>
                    </div>
                </div>
            </div> -->
            
            {{#each songs}}
                <div class="col-md-3 col-sm-4">
                    <div class="itemsContainer">
                        <div class="play">
                            <img src="/images/play.png">
                        </div>
                        <div class="music opacity-effect"> 
                            <img src="{{this.art}}">
                        </div>   
                    </div>
                </div>
            {{/each}}

        </div>
    </div>

    <div class="footer">
        <p>Footer</p>
    </div>

    <script type="text/javascript">
        function setOverlayDisplay(show) {
            document.getElementById('overlay').style.display = show ? "block" : "none";
        }

        function clearForm() {
            document.getElementById('addsong_title').value = "";
            document.getElementById('addsong_artist').value = "";
            document.getElementById('addsong_album').value = "";
            document.getElementById('addsong_length').value = "";
            document.getElementById('addsong_genre').value = "";
        }

        function setLocation(url) {
            window.location = url;
        }
    </script>

</body>
</html>